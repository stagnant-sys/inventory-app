extends layout 

block content
  h1= title

  div
    h2= item_detail.name
    img(src=item_detail.image, alt='')
    if (item_detail.description !== '')
      p= item_detail.description
    else
      p There is no description
    p #[strong Category:] #{item_detail.category.name}

  div
    if (item_detail.number_in_stock > 0)
      button(class='btn btn-primary btn-lg') Add to cart
      div(class='text-warning') Only #{item_detail.number_in_stock} in stock!
    else
      button(class='btn btn-outline-danger btn-lg', disabled) Add to cart
      div(class='text-danger') Out of stock