extends layout 

block content 

  h1= title

  div(class="container text-center")
    div(class="row")
      each item in items_list 
        div(class="col-sm d-flex flex-column")
          img(src=item.image, class='img-thumbnail', alt='')
          a(href=item.url) #[strong #{item.name}]
          p #{item.price} â‚¬
          if (item.number_in_stock <= 0)
            p(class='text-danger') Out of stock

      else
        li No item found.