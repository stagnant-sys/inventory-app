extends layout 

block content 
  div.d-flex(style='align-items: center; justify-content:space-between;')
    h1 #{title}: #{category.name} 
    div.d-flex(style='gap:16px;')
      button.btn.btn-warning 
        a.text-white.link-underline.link-underline-opacity-0(href=category.url+'/update') Update category 
      button.btn.btn-danger
        a.text-white.link-underline.link-underline-opacity-0(href=category.url+'/delete') Delete category
  
  hr

  div(class="container text-center")
    div(class="row")
      each item in itemsInCategory
        div(class="col-sm d-flex flex-column" style="position: relative; justify-content: space-between; padding-bottom: 16px;")
          img(src=item.image, class='img-thumbnail img-fluid', style='height: 160px; object-fit: contain' alt='')
          a(href=item.url) #[strong #{item.name}]
          p #{item.price} â‚¬
          if (item.number_in_stock <= 0)
            p(class='text-danger' style='position: absolute; bottom: 0; left: 50%; transform: translateX(-50%);') Out of stock

      else
        p No item found.